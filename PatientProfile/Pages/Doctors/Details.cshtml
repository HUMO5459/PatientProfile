@page
@model PatientProfile.Pages.Doctors.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="row justify-content-center">
    <h4>Doctor's Info</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor.FirstName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doctor.FirstName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor.LastName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doctor.LastName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor.Profession)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doctor.Profession)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doctor.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor.Contact)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Doctor.Contact)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Doctor.Photo)
        </dt>
        <dd class="col-sm-10">
            <img src="@(Model.Doctor.Photo)" asp-append-version="true" width="200px" height="200px" alt="Alternate Text" />
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-page="./Edit" asp-route-id="@Model.Doctor.Id">Edit</a> |
    <a class="btn btn-outline-primary" asp-page="./Index">Back to List</a>
</div>
