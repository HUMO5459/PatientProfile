@page
@model PatientProfile.Pages.Doctors.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<div class="row justify-content-center">
    <div>
        <h1>Delete</h1>
        <h3>Are you sure you want to delete this?</h3>
        <h4>Doctor</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Doctor.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Doctor.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Doctor.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Doctor.LastName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Doctor.Profession)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Doctor.Profession)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Doctor.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Doctor.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Doctor.Contact)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Doctor.Contact)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Doctor.Photo)
            </dt>
            <dd class="col-sm-10">
                <img src="@Model.Doctor.Photo" asp-append-version="true" width="200" height="200" alt="Alternate Text" />
            </dd>
        </dl>
        <form method="post">
            <input type="hidden" asp-for="Doctor.Id" />

            <input type="submit" value="Delete" class="btn btn-danger mt-5" /> |
            <a class="btn btn-outline-primary mt-5" asp-page="./Index">Back to List</a>
        </form>
    </div>
</div>